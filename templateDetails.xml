<?xml version="1.0" encoding="UTF-8"?>
<extension type="template" client="site" method="upgrade">
    <name>weltspiegel</name>
    <version>0.4.0</version>
    <creationDate>Dezember 2025</creationDate>
    <author>Michael Buchholz</author>
    <copyright>Weltspiegel Cottbus</copyright>
    <license>MIT</license>
    <description>TPL_WELTSPIEGEL_DESCRIPTION</description>

    <files>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>joomla.asset.json</filename>
        <filename>LICENSE</filename>
        <folder>html</folder>
    </files>

    <updateservers>
        <server type="extension" name="Weltspiegel Template Updates">https://raw.githubusercontent.com/weltspiegel-cottbus/tpl_weltspiegel/main/update-manifest.xml</server>
    </updateservers>

    <positions>
        <position>menu</position>
    </positions>

    <languages folder="language">
        <language tag="de-DE">de-DE/tpl_weltspiegel.ini</language>
        <language tag="de-DE">de-DE/tpl_weltspiegel.sys.ini</language>
    </languages>

    <media folder="media" destination="templates/site/weltspiegel">
        <folder>css</folder>
        <folder>js</folder>
        <folder>images</folder>
        <folder>fonts</folder>
    </media>
</extension>
